@using BK.UserManagement.Web.Models
@model IEnumerable<UserInfoModel>
    @{
        ViewData["Title"] = "ListUserInfo";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            User Info
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> User</a></li>
            <li class="active><a href="#">ListUserInfo</a></li>

        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        @*<h3 class="box-title">User List</h3>*@

                        <button type="button" class="btnAdd btn btn-primary pull-left"
                                onclick="location.href='@Url.Action("AddUserInfo", "User")';">
                            <i class="fa fa-plus"></i> Add User Info
                        </button>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="tbl_user" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    
                                    <th>User Name</th>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>Address</th>
                                    <th>Phone</th>
                                    <th>Email</th>
                                    <th>Features</th>

                                </tr>
                            </thead>
                            <tbody>



                                @foreach (var u in Model)
                                {
                                    <tr>
                                        
                                        <td>@u.USERNAME</td>
                                        <td>@u.FIRST_NAME</td>
                                        <td>@u.LAST_NAME</td>
                                        <td>@u.ADDRESS</td>
                                        <td>@u.PHONE</td>
                                        <td>@u.EMAIL</td>
                                        <td>
                                            <button data-user-name="@u.USERNAME" type="button" 
                                                    class="btnDelete btn btn-danger pull-right">
                                                <i class="fa fa-remove"></i> Delete
                                            </button>
                                            @*@Html.ActionLink("Edit", "Edit", new { id=u.USER_ID})*@
                                            <button type="button" data-user-name="@u.USERNAME"
                                                    class="btnEdit btn btn-success pull-right" style="margin-right: 5px;">
                                                <i class="fa fa-edit"></i> Edit
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>User Name</th>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>Address</th>
                                    <th>Phone</th>
                                    <th>Email</th>
                                    <th>Features</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->

    <environment names="Development">


    </environment>
    <environment names="Staging,Production">


    </environment>
    @section Scripts {

        <script type="text/javascript">
        $(document).ready(function () {

            $('.btnEdit').click(function (e) {
                var username = $(this).data('userName');
                location.href = '@Url.Content("~/User/EditUserInfo/")' + username;
            });
            $('.btnDelete').click(function (e)
            {
                var username = $(this).data('userName');
                    location.href = '@Url.Content("~/User/DeleteUserInfo/")' + username;
            });

        });
        </script>

        <!-- page script -->
        <script>
        $(function () {
            //$('#example1').DataTable()
            $('#tbl_user').DataTable({
                'paging': true,
                'lengthChange': true,
                'searching': true,
                'ordering': true,
                'info': true,
                'autoWidth': false
            })
            //$('a.menu_list_user_info').closest('li').addClass('active');
        })
        </script>








    }
