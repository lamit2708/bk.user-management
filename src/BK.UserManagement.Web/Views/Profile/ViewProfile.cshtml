@model IEnumerable<BK.UserManagement.Web.Models.ProfileResource>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Profile: @ViewBag.ProfileName
    </h1>

    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Profile</a></li>
        <li class="active">View Profile</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-info">

                <!-- /.box-header -->
                <div class="box-header with-border">
                    @*<h3 class="box-title">User List</h3>*@
                </div>

                <div class="box-body">
                    <table id="tbl_profile" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>RESOURCE_NAME</th>
                                <th>RESOURCE_TYPE</th>
                                <th>LIMIT</th>
                            </tr>
                        </thead>
                        <tbody>



                            @foreach (var u in Model)
                            {
                                <tr>
                                    <td>@u.Resource_Name</td>
                                    <td>@u.Resource_Type</td>
                                    @{
                                        var pk = u.Profile + "-" + u.Resource_Name;
                                    }
                                    <td><a href="#" class="Edit_Limit" data-type="text" data-pk=@u.Resource_Name data-url=@Url.Action("EditLimit", "Profile") data-title="Enter Model Name">@u.Limit</a></td>
                                </tr>
                            }
                        </tbody>

                        <tfoot>
                            <tr>
                                <th>Resource Name</th>
                                <th>Resource Type</th>
                                <th>Limit</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

@section Scripts {

    <!-- page script -->

    <script>
        $(function () {
            //$('#example1').DataTable()
            $('#tbl_profile').DataTable({
                'paging': true,
                'lengthChange': true,
                'searching': true,
                'ordering': true,
                'info': true,
                'autoWidth': false
            })
        })
        $(document).ready(function () {
            $('Edit_Limit').Editable();
        });

    </script>





}


