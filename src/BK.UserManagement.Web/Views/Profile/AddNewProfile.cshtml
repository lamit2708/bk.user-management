@model BK.UserManagement.Web.Models.ProfileModel
@{
    ViewData["Title"] = "AddNewProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>Create profile</h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Profile</a></li>
        <li class="active">Create</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class=" col-md-12">
            <div class="box box-success">
                <div class="box-header with-border">
                    @*<h3 class="box-title">General Elements</h3>*@
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <form asp-action="AddNewProfile">
                        <div class="form-horizontal">

                            @if (ViewBag.Message != null)
                            {

                                <div class="alert alert-warning alert-dismissible">
                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                    <h4><i class="icon fa fa-warning"></i> Alert!</h4>
                                    @ViewBag.Message
                                </div>
                            }

                            <h4>Profile Name</h4>
                            <hr />
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                @*<label asp-for="PROFILE" class="col-md-2 control-label"></label>*@
                                <div class="col-md-2">
                                    <input asp-for="PROFILE" class="form-control" />
                                    <span asp-validation-for="PROFILE" class="text-danger"></span>
                                </div>
                                <div class="col-md-10">
                                    <input type="submit" value="Create" class="btn btn-success" />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</section>

