@using BK.UserManagement.Web.Models
@model IEnumerable<ProfileResource>

        @{
            ViewData["Title"] = "Edit";
            Layout = "~/Views/Shared/_Layout.cshtml";
        }

        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Profile: @ViewBag.ProfileName
            </h1>

            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i>@Html.ActionLink(" Profile", "Index", "Profile")</a></li>
                <li class="active">Edit Profile</li>
            </ol>
        </section>


        <section class="content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box box-info">

                        <!-- /.box-header -->
                        <div class="box-header with-border">
                            @*<h3 class="box-title">User List</h3>*@
                        </div>

                        <div class="box-body">
                            <table id="tbl_profile" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>RESOURCE_NAME</th>
                                        <th>RESOURCE_TYPE</th>
                                        <th>LIMIT</th>
                                    </tr>
                                </thead>
                                <tbody>



                                    @foreach (var u in Model)
                                    {
                                        <tr>
                                            <td>@u.Resource_Name</td>
                                            <td>@u.Resource_Type</td>
                                            <td>@u.Limit</td>
                                        </tr>
                                    }
                                </tbody>

                                <tfoot>
                                    <tr>
                                        <th>Resource Name</th>
                                        <th>Resource Type</th>
                                        <th>Limit</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </section>





        <form asp-action="Edit">
            <div class="form-horizontal">
                <h4>ProfileResource</h4>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Profile" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Profile" class="form-control" />
                        <span asp-validation-for="Profile" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Resource_Name" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Resource_Name" class="form-control" />
                        <span asp-validation-for="Resource_Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Resource_Type" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Resource_Type" class="form-control" />
                        <span asp-validation-for="Resource_Type" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Limit" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Limit" class="form-control" />
                        <span asp-validation-for="Limit" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </form>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>

