@using BK.UserManagement.Web.Models
@model ProfileResource

        @{
            ViewData["Title"] = "Edit";
            Layout = "~/Views/Shared/_Layout.cshtml";
        }

        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Profile: @ViewBag.ProfileName
            </h1>

            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i>@Html.ActionLink(" Profile", "Index", "Profile")</a></li>
                <li class="active">Edit Profile</li>
            </ol>
        </section>


        <section class="content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box box-info">
                        @if (ViewBag.Message != null)
                        {
                            <div class="alert alert-warning alert-dismissible">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">X</button>
                                <h4><i class="icon fa fa-warning"></i> Alert!</h4>
                                @ViewBag.Message
                            </div>
                        }
                        <!-- /.box-header -->
                        <div class="box-header with-border">
                            @*<h3 class="box-title">User List</h3>*@
                        </div>

                        <div class="box-body">
                            <form asp-action="Edit">
                                <div class="form-horizontal">
                                    <h4>Edit Resource</h4>
                                    <hr />
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <input type="hidden" asp-for="Profile" value="@Model.Profile">

                                    <div class="form-group">
                                        <label asp-for="Resource_Name" class="col-md-2 control-label"></label>
                                        <div class="col-md-10">
                                            <input asp-for="Resource_Name" class="form-control" disabled/>
                                            <input type="hidden" asp-for="Resource_Name" value="@Model.Resource_Name">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Resource_Type" class="col-md-2 control-label"></label>
                                        <div class="col-md-10">
                                            <input asp-for="Resource_Type" class="form-control" disabled/>
                                            <input type="hidden" asp-for="Resource_Type" value="@Model.Resource_Type">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Limit" class="col-md-2 control-label"></label>
                                        <div class="col-md-10">
                                            <input asp-for="Limit" class="form-control" />
                                            <span asp-validation-for="Limit" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Save" class="btn-lg btn-success" />
                                        </div>
                                    </div>
                                </div>
                            </form>
                            </div>
                                <!-- /.box-body -->
                        </div>
                    <!-- /.box -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->

            <div>
                <i class="fa fa-backward"></i><a asp-action="Index"> Back to List</a>
            </div>

        </section>





