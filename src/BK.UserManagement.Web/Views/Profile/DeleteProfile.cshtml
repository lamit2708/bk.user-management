
@{
    ViewData["Title"] = "DeleteProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>Delete profile</h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Profile</a></li>
        <li class="active">Delete</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class=" col-md-12">
            <div class="box box-danger">
                <div class="box-header with-border">
                    @*<h3 class="box-title">General Elements</h3>*@
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    @using (Html.BeginForm("Delete", "Profile",new {_profileName = ViewBag.ProfileName }))
                    {
                        <div class="form-horizontal">
                            <h2>Are you sure to delete this profile</h2>
                            <h4>Oracle Database will drops the profile and assigns the DEFAULT profile to any users currently assigned to this</h4>
                            <hr />
                            <div class="form-group">
                                @*<label asp-for="PROFILE" class="col-md-2 control-label"></label>*@
                                <div class="col-md-2">
                                    <label class="col-md-2 control-label">@ViewBag.ProfileName</label>
                                </div>
                                <div class="col-md-10">
                                    <button type="button" class="btn btn-default" style="margin-right: 5px;" onclick="location.href='@Url.Action("Index", "Profile")';">Cancel</button>
                                    <input type="submit" value="Delete" class="btn btn-danger" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>