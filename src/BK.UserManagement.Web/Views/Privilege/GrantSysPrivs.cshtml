
@{
    ViewData["Title"] = "Grant Sys Privileges To User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Grant System Privileges To User
    </h1>

    @*<ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> User</a></li>
        <li class="active">Edit</li>
    </ol>*@
</section>

<section class="content">
    <div class="row">
        <div class=" col-md-12">
            <div class="box box-success">
                <div class="box-header with-border">
                    @*<h3 class="box-title">General Elements</h3>*@
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-warning alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">X</button>
                            <h4><i class="icon fa fa-warning"></i> Alert!</h4>
                            @ViewBag.Message
                        </div>
                    }
                    <form asp-action="GrantSysPrivs">
                        <div class="form-horizontal">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <input type="hidden" asp-for="Profile" value="@Model.Profile">

                            <div class="form-group">
                                <label asp-for="Resource_Name" class="col-md-2 control-label"></label>
                                <div class="col-md-10">
                                    <input asp-for="Resource_Name" class="form-control" disabled />
                                    <input type="hidden" asp-for="Resource_Name" value="@Model.Resource_Name">
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Resource_Type" class="col-md-2 control-label"></label>
                                <div class="col-md-10">
                                    <input asp-for="Resource_Type" class="form-control" disabled />
                                    <input type="hidden" asp-for="Resource_Type" value="@Model.Resource_Type">
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Limit" class="col-md-2 control-label"></label>
                                <div class="col-md-10">
                                    <input asp-for="Limit" class="form-control" />
                                    <span asp-validation-for="Limit" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Save" class="btn-lg btn-success" />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</section>