@using BK.UserManagement.Web.Models
@model IEnumerable<SysPrivsModel>
@{
    ViewData["Title"] = "Sys Privs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        User System Privilege Table
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> System</a></li>
        <li class="active><a href="#">DBA_SYS_PRIVS</a></li>

    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    @*<h3 class="box-title">User List</h3>*@

                   
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="tbl_user" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>GRANTEE</th>
                                <th>PRIVILEGE</th>
                                <th>ADMIN_OPTION</th>
                                

                            </tr>
                        </thead>
                        <tbody>



                            @foreach (var s in Model)
                            {
                                <tr>
                                    <td>@s.GRANTEE</td>
                                    <td>@s.PRIVILEGE</td>
                                    <td>@s.ADMIN_OPTION</td>
                                    
                                    
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>User Name</th>
                                <th>Features</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->

<environment names="Development">


</environment>
<environment names="Staging,Production">


</environment>
@section Scripts {

    <script type="text/javascript">
        $(document).ready(function () {

            $('.btnEdit').click(function (e) {
                //var userId = $(this).data('userId');
                var username = $(this).data('userName');
                //console.log($(this).data());
                location.href = '@Url.Content("~/User/Edit/")' + username;
            });
            $('.btnDelete').click(function (e)
            {
                var userId = $(this).data('userId');
                var username = $(this).data('userName');
                if (userId > 100 && userId < 2147483638) {

                    //console.log(username);
                    //console.log('@Url.Content("~/User/Delete/")' + username)
                    location.href = '@Url.Content("~/User/Delete/")' + username;

                } else {

                    alert("Can not delete the user "+username+"/"+userId+"!\r\n Your have not privileges to delete the user with id <100. ");

                }

            });

        });
    </script>

    <!-- page script -->
    <script>
        $(function () {
            //$('#example1').DataTable()
            $('#tbl_user').DataTable({
                'paging': true,
                'lengthChange': true,
                'searching': true,
                'ordering': true,
                'info': true,
                'autoWidth': false
            })
        })
    </script>

    <!-- Menu Active -->
    <script type="text/javascript">
        $(document).ready(function () {
            $('a.menu_user').closest('li').addClass('active');
            //$('a.menu_multilevel').closest('li').addClass('active');
            //$('a.menu_level1').closest('li').addClass('active');

        });
    </script>







}
