@using BK.UserManagement.Web.Models.RoleViewModels

@model GrantRoleToRoleViewModel
@{
    ViewData["Title"] = "GrantRoleRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Grant Role to Role
    </h1>

    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Role</a></li>
        <li class="active">GrantRoleToRole</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class=" col-md-6">
            <div class="box box-warning">
                <div class="box-header with-border">

                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <form role="form" asp-controller="Role" asp-action="GrantRoleRole" asp-route-returnurl="@ViewData["ReturnUrl"]" class="form-horizontal">
                        <div asp-validation-summary="All" class="text-danger"></div>                      

                        <div class="form-group">
                            <label asp-for="Role" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="Role" class="form-control" value="@Model.Role" />
                                <span asp-validation-for="Role" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="GrantedRole" class="col-md-4 control-label"></label>
                            <div class="col-md-8">
                                <select asp-for="GrantedRole" asp-items="@Model.Roles"
                                        class="form-control select2" style="width: 100%;"></select>

                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-4 col-md-8">
                                <button type="submit"
                                        class="btnSave btn btn-success pull-left" style="margin-right: 5px;">
                                    <i class="fa fa-save"></i> Grant
                                </button>

                            </div>
                        </div>
                    </form>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
</section>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


}





