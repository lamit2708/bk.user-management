@using BK.UserManagement.Web.Models.RoleViewModels
@model GrantRoleObjectPrivsViewModel
@{
    ViewData["Title"] = "GrantRoleObjectPrivs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Grant Sys Privs to Role
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Role</a></li>
        <li class="active">GrantObjectPrivs</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <form asp-controller="Role" asp-action="GrantObjectPrivs" method="post" asp-route-returnurl="@ViewData["ReturnUrl"]">
        <div class="row">
            <div class=" col-md-12">
                <div class="box box-warning">
                    <div class="box-header with-border">
                    </div><!-- /.box-header -->
                    <div class="box-body">

                        <div asp-validation-summary="All" class="text-danger"></div>


                        <div class="form-group">
                            <label class="col-md-3 control-label">To Role</label>

                            <div class="col-md-9">
                                <input value="@Model.Role" class="form-control" disabled />
                                <input asp-for="Role" class="form-control hidden" />
                                <span asp-validation-for="Role" class="text-danger"></span>
                            </div>
                        </div>




                        <!-- ROLE_SYS_PRIVS -->

                        <div class="form-group">
                            <label asp-for="Table_Name" class="col-md-3 control-label"></label>
                            <div class="col-md-9">
                                <input asp-for="Table_Name" class="form-control" />
                                <span asp-validation-for="Table_Name" class="text-danger"></span>
                            </div>
                        </div>





                        <div class="row">
                            <div class="form-group">
                                <label class="col-md-3 control-label"></label>
                                <div class="col-md-1">
                                    <input type="checkbox" asp-for="Select" checked="@Model.Select">
                                </div>

                                <div class="col-md-8">
                                    @Html.DisplayNameFor(m => m.Select)
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label class="col-md-3 control-label"></label>
                                <div class="col-md-1">
                                    <input type="checkbox" asp-for="Insert" checked="@Model.Insert">
                                </div>

                                <div class="col-md-8">
                                    @Html.DisplayNameFor(m => m.Insert)
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <label class="col-md-3 control-label"></label>
                            <div class="form-group">
                                <div class=" col-md-1">
                                    <input type="checkbox" asp-for="Delete" checked="@Model.Delete">
                                </div>

                                <div class="col-md-8">
                                    @Html.DisplayNameFor(m => m.Delete)
                                </div>
                            </div>
                        </div>

                        <!-- /.col -->
                        <!-- /.col -->

                        <div class="form-group">
                            <label class="col-md-3 control-label"></label>
                            <div class="col-md-2">
                                <button type="submit" class="btn btn-primary btn-block ">Save</button>
                            </div>
                            <div class="col-md-7"></div>

                        </div>
                    </div>
                </div>


            </div>
        </div>





    </form>
</section>



@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script>
        $(document).ready(function () {
            // Active Menu
            $('.menu_list_role').parent().addClass('active').closest('.treeview').addClass('active');

        });
    </script>
}





